<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CBSMapInfo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/ol/ol.css")">
    <script src="https://unpkg.com/elm-pep"></script>
    <!-- The line below is only needed for old environments like Internet Explorer and Android 4.x -->
    <script src="https://cdn.polyfill.io/v3/polyfill.min.js?features=fetch,requestAnimationFrame,Element.prototype.classList,URL,TextDecoder,Number.isInteger"></script>
</head>
<body>
    <div class="container">
        <button type="button" class="btn btn-dark btn-group" data-toggle="modal" data-target="#MahalleEkle" style="float:right;">
            Mahalle Ekle
        </button>
        <button type="button" class="btn btn-dark btn-group" data-toggle="modal" data-target="#KapiEkle"style="float:right;">
            Kapı Ekle
        </button>
    </div>
    
    <div class="modal fade" id="MahalleEkle" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Mahalle Ekle</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <form method="post" action="/home/uyeol">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Mahalle adınız: </label>
                            <input type="text" name="kullaniciad" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Mahalle Kodunuz: </label>
                            <input type="password" name="sifre" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Mahalle Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="KapiEkle" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Kapı Ekle</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <form method="post" action="/home/uyeol">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Kapı Numaranızı Giriniz: </label>
                            <input type="text" name="kullaniciad" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Mahalle Kodunuz: </label>
                            <input type="password" name="sifre" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Kapı Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CBSMapInfo - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script type="text/javascript" src="~/ol/ol.js"></script>
    <script src="~/js/init.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
